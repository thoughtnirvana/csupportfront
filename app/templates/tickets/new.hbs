<h2>Add a new Ticket</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.name class="form-control" placeholder="Ticket Name"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            {{input type="text" value=model.description class="form-control" placeholder="Ticket Description"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveTicket' model}}>Add Ticket</button>
        </div>
    </div>
    {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}
</div>